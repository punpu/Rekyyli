// Styluksen style-tiedosto, tänne omat CSS:t jos tarvitsee bootstrapin lisäksi

body
  margin-bottom 150px

p
  font-size 14px !important

.navbar-inverse
  margin-bottom 0px

//Sivuston alapalkki
.navbar-fixed-bottom
  margin-left 15px
  margin-right 15px
  -moz-border-radius 0px
  -webkit-border-radius 4px 4px 0px 0px
  border-radius 4x 4px 0px 0px
  padding-bottom 0px

.jumbotron
  padding 5px
  padding-top 15px

//Etusivun yläosan hakupalkki
.searchbar
  padding-left 30px
  padding-right 30px
  padding-top 10px
  padding-bottom 10px
  margin-bottom 0px

.searchcolumn
  padding-left 30px
  padding-right 30px

.searchcolumn>div>label
  margin-top 10px

//Alapalkin jumbotron, jonka sisällä hakemuslistan lisävalinnat ovat
.jumbotron-footer
  padding 10px
  margin-bottom 0px

//Hakemustaulukko, täytyy olla himan marginia jotta alapalkki ei tule päälle
.applications-table
  margin-bottom 0px

textarea
  resize vertical

//Angular-UI:n fiksaukset
.nav, .pagination, .carousel, .panel-title a
  cursor pointer

.input-margin
  margin-top 5px
  margin-bottom 10px

// Rivinvaihdot hakemuksen kommenteissa näkyviin
.comment
  white-space pre

.drawers
  background-color #eee

.pagination
  margin-top 3px
  margin-bottom 0px

// Vaihdettu ylämenun teksti valkoiseksi ja alleviivaus viedessä hiiri valinnan päälle


.navbar-inverse, .navbar-nav>li>a 
	color #FFF !important
	
.navbar-inverse, .navbar-nav>li>a:hover 
	text-decoration underline
	
.navbar-inverse, .navbar-brand 
	color #FFF !important

.navbar-inverse, .navbar-brand:hover 
	text-decoration underline

// Ikoneiden värejä voi asetella näillä classeilla

.green
  color: green

.red
  color: red

// Alert-viestien container
.alert_container
  position: fixed
  left: 80%
  bottom: 10%
  width: 250px
